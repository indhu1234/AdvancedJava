<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.grantuniversity.model.Student" table="STUDENT">
        <id name="userid" type="string">
            <column name="USERID" length="40" />
            <generator class="assigned" />
        </id>
        <property name="firstname" type="string">
            <column name="FIRSTNAME" length="20" />
        </property>
        <property name="lastname" type="string">
            <column name="LASTNAME" length="20" />
        </property>
        <property name="gender" type="string">
            <column name="GENDER" length="10" />
        </property>
        <property name="dob" type="date">
            <column name="DOB" length="10" />
        </property>
        <property name="phone" type="string">
            <column name="PHONE" length="20" />
        </property>
        <property name="email" type="string">
            <column name="EMAIL" length="100" />
        </property>
        <property name="password" type="string">
            <column name="PASSWORD" length="100" />
        </property>
        <many-to-one name="studentAddress" class="com.grantuniversity.model.Address" column="STUDENTADDRESS" not-null="true" cascade="all" unique="true" />
        <many-to-one name="studentCourse" class="com.grantuniversity.model.StudentCourse" column="STUDENTCOURSE" not-null="true" cascade="all" unique="true" />
    </class>
</hibernate-mapping>
